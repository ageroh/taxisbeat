        <div class="product-grid">
            @if (Model.Content != null && Model.Content.Children != null)
            {
                foreach (Service service in Model.Content.Children)
                {
                    @*<a href="@service.Url" class="product-grid__item" style="background-image: url('@service.Photos.FirstOrDefault().Url')">*@
                    <a href="@service.Url" class="product-grid__item" style="background-image: url('')">
                        <div class="product-grid__item__overlay">
                            <div class="product-grid__item__name">@service.ServiceName</div>
                            <div class="product-grid__item__price">€ @service.Price.ToString("F")</div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>

</section>