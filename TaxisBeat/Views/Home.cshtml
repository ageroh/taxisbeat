@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Master.cshtml";
    var backgroundImage = Model.Content.HeroBackgroundImage != null ? Model.Content.HeroBackgroundImage.Url : String.Empty;
}
<section id="slider" class="slider-parallax" style="background: url(@backgroundImage) no-repeat; background-size: cover" data-height-lg="600" data-height-md="500" data-height-sm="400" data-height-xs="300" data-height-xxs="250">
    <div class="slider-parallax-inner">

        <div class="container clearfix">
            <div class="vertical-middle dark center">

                <div class="heading-block nobottommargin center">
                    <h1>
                        <span class="text-rotater nocolor" data-separator="|" data-rotate="flipInX" data-speed="3500">
                            @Model.Content.HeroHeader <span class="t-rotate">Simple|Customizable|Flexible|Easy|Profitable</span>
                        </span>
                    </h1>
                    <span class="hidden-xs">@Model.Content.HeroDescription</span>
                </div>
                @if(Model.Content.HeroCtalink != null && Model.Content.HeroCtalink.Url != null)
                {
                    <a href="@Model.Content.HeroCtalink.Url" class="button button-border button-light button-rounded button-reveal tright button-large topmargin hidden-xs">
                        <i class="icon-angle-right"></i>
                        <span> @Model.Content.HeroCtacaption</span>
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<section class="section section">
    @*@Html.GetGridHtml(Model.Content, "bodyText", "bootstrap3-fluid")*@
</section>

