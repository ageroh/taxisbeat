@using System.Web.Optimization
@using Constants = UmbracoCmsTicketMania.Code.Constants;
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    if (!Members.IsLoggedIn() || !Members.IsMemberAuthorized()) { Response.Redirect("/"); }
    var memberProfile = Members.GetCurrentMember();
}
@*
section ScriptsBottom
{
    @Styles.Render("~/bundles/css/croptool")
}
*@
@Html.Partial("Common/FixHeaderCanvas")
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row clearfix">
                <div class="col_full">
                    <!--<img src="images/icons/avatar.jpg" class="alignleft img-circle img-thumbnail notopmargin nobottommargin" alt="Avatar" style="max-width: 84px;">-->
                    <div class="heading-block noborder">
                        <h3>@memberProfile.Name</h3>
                        <span>Your Profile Bio</span>
                    </div>
                    <div class="clear"></div>
                    <div class="row clearfix">
                        <div class="col_full">
                            <div class="tabs tabs-alt clearfix" id="tabs-profile">
                                <ul class="tab-nav clearfix">
                                    <li><a href="#tab-profile" data-tab="profile"><i class="icon-user"></i> <span class="hidden-xs">Profile</span></a></li>
                                    <li><a href="#tab-feeds" data-tab="feeds"><i class="icon-rss2"></i><span class="hidden-xs"> Feeds</span></a></li>
                                    <li><a href="#tab-experiences" data-tab="experiences"><i class="icon-photo"></i> <span class="hidden-xs"> Experiences</span></a></li>
                                    <li><a href="#tab-competitions" data-tab="competitions"><i class="icon-line2-trophy"></i><span class="hidden-xs"> Competitions</span></a></li>
                                </ul>
                                <div class="form-process" id="js-profile-tab-loader"></div>
                                <div class="tab-container" data-lang="@Culture">
                                    <div class="tab-content clearfix" id="tab-profile"></div>
                                    <div class="tab-content clearfix" id="tab-feeds"></div>
                                    <div class="tab-content clearfix" id="tab-experiences"></div>
                                    <div class="tab-content clearfix" id="tab-competitions"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="line visible-xs-block"></div>
            </div>
        </div>
    </div>
</section>
